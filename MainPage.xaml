<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProiectMediiMAUI.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="hairsalon.png"
                SemanticProperties.Description="Gaseste salonul perfect pentru nevoile tale!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <Label
                Text="Lumea saloanelor"
                SemanticProperties.HeadingLevel="Level1"
                FontSize="32"
                HorizontalOptions="Center" />

            <Label
                Text="Bine ati venit pe platforma saloanelor de coafura"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Bine ati venit pe platforma saloanelor de coafura"
                FontSize="18"
                HorizontalOptions="Center" />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
